<%- model_class = Energy -%>
<div class="container-fluid" xmlns="http://www.w3.org/1999/html" xmlns="http://www.w3.org/1999/html">
  <div class="row-fluid">

    <div class="span12">
      <div class="page-header">
        <center>
          <h1>  Meals </h1>
        </center>
      </div>
        <center>

        <table class="table table-striped table-hover table-condensed table-bordered">
          <thead>
          <tr>
            <th><center><i class="icon-calendar icon-large"></i></center></th>
            <th colspan="2"><center><i class="icon-signal icon-large"></i></center></th>
            <th><center><i class="icon-comments-alt icon-large"></i></center></th>
            <th><center><i class="icon-file-alt icon-large"></i></center></th>
          </tr>
          </thead>
          <tbody>
<% @meals.each do |meal| %>
  <tr>
    <td><center><span class="icon-time"></span> <%= time_ago_in_words(meal.created_at) + ' ago' %></center></td>
    <td>
      <div align='center'>
      Breakfast<br>
      Lunch<br>
      Dinner<br>
      </div>
    </td>
    <td>

      <div align='left'>

      <%= boolean_to_words(meal.breakfast) %><br>
      <%= boolean_to_words(meal.lunch) %><br>
      <%= boolean_to_words(meal.dinner) %>
      </div>
    </td>
    <td><center><%= meal.notes %></center></td>
    <td>
      <center>
        <%= link_to '<i class="icon-pencil"></i> Edit'.html_safe, edit_meal_path(meal), :class => 'badge badge-info' %>
        <%= link_to '<i class="icon-trash"></i> Remove'.html_safe, meal_path(meal),
                    :method => :delete,
                    :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                    :class => 'badge badge-important' %>
      </center>
    </td>
  </tr>
<% end %>
</table>

<br />

    </div>

  </div>
  <div class="row-fluid">
    <div class="span5">    </div>
      <div class="span2">
        <center>

          <%= link_to(new_meal_path) do %>
              <div class="badge badge-success">
                <span class="icon-plus-sign">  Create</span>
              </div>
          <% end %>

        </center>

      </div>
      <div class="span5"></div>
    </div>