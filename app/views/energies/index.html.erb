<%- model_class = Energy -%>
<div class="container-fluid">

  <div class="row-fluid">
    <div class="span3">
      </div>
  <div class="span6>
                                           <div class="page-header">
    <center><h1><i class="icon-bolt icon-large"></i>  Energy Levels <i class="icon-bolt icon-large"></i></h1></center>

  </div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><center><i class="icon-calendar icon-large"></i></center></th>
      <th><center>1 - 10</center></th>
      <th><center><i class="icon-comments-alt icon-large"></i></center></th>

      <th><center><i class="icon-unlock icon-large"></i></center></th>
    </tr>
  </thead>
  <tbody>

    <% @energies.each do |energy| %>
      <tr>
        <td><center><span class="icon-time"></span> <%= distance_of_time_in_words_to_now(energy.created_at) %></center> </td>
        <td><center><%= energy.value %></center></td>
        <td><center><%= energy.notes %></center></td>

        <td>          <center>
          <div class="btn-group open">

            <a class="btn btn-primary dropdown-toggle" data-toggle="dropdown"> <span class="icon-edit"> Edit</span></a>
            <ul class="dropdown-menu">
              <li><%= link_to t('.edit', :default => t("helpers.links.edit")),
                              edit_energy_path(energy), :class => 'icon-pencil' %>
              </li>
              <li><%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                              energy_path(energy),
                              :method => :delete,
                              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                              :class => 'icon-trash' %>
              </li>
            </ul>
          </div>
        </center>
        </td>
      </tr>

    <% end %>

  </tbody>

</table>



</div>
<div class="span3">
</div>
</div>
<div class="row-fluid">
  <div class="span4"></div>
  <div class="span4">
    <center>

      <%= link_to(new_energy_path) do %>
          <div class="btn btn-large btn-block btn-primary">
            <span class="icon-plus-sign">New</span>
          </div>
      <% end %>

    </center>

    <div class="btn-group open">
      <a class="btn btn-success dropdown-toggle" data-toggle="dropdown"> <span class="icon-edit"> Edit</span></a>
