<%- model_class = Energy -%>
<div class="container-fluid">

  <div class="row-fluid">
    <div class="span3">
      </div>
  <div class="span6>
                                           <div class="page-header">
    <center><h1>  Energy Levels  <i class="icon-bolt icon-large"></i></h1></center>

  </div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><center><i class="icon-calendar icon-large"></i></center></th>
      <th><center><i class="icon-signal icon-large"></i></center></th>
      <th><center><i class="icon-comments-alt icon-large"></i></center></th>

      <th><center><i class="icon-file-alt icon-large"></i></center></th>
    </tr>
  </thead>
  <tbody>

    <% @energies.each do |energy| %>
      <tr>
        <td><center><span class="icon-time"></span> <%= distance_of_time_in_words_to_now(energy.created_at) %></center> </td>
        <td><center><%= energy.value %></center></td>
        <td><center><%= energy.notes %></center></td>

        <td>
            <center>

                <%= link_to '<i class="icon-pencil"></i> Edit'.html_safe, edit_energy_path(energy), :class => 'btn btn-small btn-primary' %>
                <%= link_to '<i class="icon-trash"></i> Remove'.html_safe, energy_path(energy),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-small btn-primary btn-danger'%>
            </center>
        </td>
      </tr>

    <% end %>

  </tbody>

</table>



</div>
<div class="span3">
</div>
</div>
<div class="row-fluid">
  <div class="span4"></div>
  <div class="span4">
    <center>

      <%= link_to(new_energy_path) do %>
          <div class="btn btn-large btn-block btn-primary btn-info">
            <span class="icon-plus-sign">  New</span>
          </div>
      <% end %>

    </center>





  </div>
  <div class="span4"></div>
</div>