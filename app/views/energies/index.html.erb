<%- model_class = Energy -%>
<div class="container-fluid" xmlns="http://www.w3.org/1999/html" xmlns="http://www.w3.org/1999/html">
  <div class="row-fluid">
  <div class="span2">
  </div>
  <div class="span8">
    <div class="page-header">
    <center><h1>  Energy Levels</h1></center>
  </div>
  <center>

<table class="table table-striped table-hover table-condensed table-bordered">
  <thead>
    <tr>
      <th><%= sortable "created_at", "icon-calendar" %></th>
      <th><%= sortable "value", "icon-signal" %></th>
      <th><center><i class="icon-comments-alt icon-large"></i></center></th>
      <th><center><i class="icon-file-alt icon-large"></i></center></th>
    </tr>
  </thead>
  <tbody>


    <% @energies.limit(5).each do |energy| %>
      <tr>
        <td><center><span class="icon-time"></span> <%= time_ago_in_words(energy.created_at) + ' ago' %></center> </td>
        <td><center><%= energy.value %></center></td>
        <td><center><%= energy.notes %></center></td>

        <td>
            <center>

                <%= link_to '<i class="icon-pencil"></i> &nbsp &nbsp Edit &nbsp &nbsp &nbsp '.html_safe, edit_energy_path(energy), :class => 'badge badge-info' %>
                <%= link_to '<i class="icon-trash"></i> Remove'.html_safe, energy_path(energy),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'badge badge-important'%>
            </center>
        </td>
      </tr>
      <tr>


      </tr>
    <% end %>

  </tbody>

</table>
    <center>

      <%= link_to(new_energy_path) do %>
          <div class="badge badge-success">
            <span class="icon-plus-sign">  Create</span>
          </div>
      <% end %>
      <div id="annual"></div>

    </center>

    <table class="table table-striped table-hover">

  <tbody>
  <tr>

    <%= content_tag :div, "", id: "energies_chart", data: {energies: @energies} %>

  </tr>
  </tbody>
</table>


</div>
<div class="span2">
</div>
</div>
<div class="row-fluid">
  <div class="span5">     </div>
  <div class="span2">





  </div>
  <div class="span5"></div>
</div>
