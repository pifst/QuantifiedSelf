<%- model_class = Energy -%>
<div class="container-fluid" xmlns="http://www.w3.org/1999/html" xmlns="http://www.w3.org/1999/html">
  <div class="row-fluid">
  <div class="span3">
  </div>
  <div class="span6">
    <div class="page-header">
    <center><h1>  Energy Levels  <i class="icon-bolt icon-large"></i></h1></center>
  </div>
  <center>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th><%= sortable "created_at", "icon-calendar" %></th>
      <th><%= sortable "value", "icon-signal" %></th>
      <th><center><i class="icon-comments-alt icon-large"></i></center></th>
      <th><center><i class="icon-file-alt icon-large"></i></center></th>
    </tr>
  </thead>
  <tbody>


    <% @energies.each do |energy| %>
      <tr>
        <td><center><span class="icon-time"></span> <%= time_ago_in_words(energy.created_at) + ' ago' %></center> </td>
        <td><center><%= energy.value %></center></td>
        <td><center><%= energy.notes %></center></td>

        <td>
            <center>

                <%= link_to '<i class="icon-pencil"></i> Edit'.html_safe, edit_energy_path(energy), :class => 'btn btn-small btn-primary' %>
                <%= link_to '<i class="icon-trash"></i> Remove'.html_safe, energy_path(energy),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-small btn-primary btn-danger'%>
            </center>
        </td>
      </tr>
      <tr>

      </tr>
    <% end %>

  </tbody>

</table>
<table class="table table-striped table-hover">

  <tbody>
  <tr>
    <%= content_tag :div, "", id: "energy_values", data: {energy: @energies} %>
    </tr>
  </tbody>
</table>


</div>
<div class="span3">
</div>
</div>
<div class="row-fluid">
  <div class="span5">
  <div class="span2">
    <center>

      <%= link_to(new_energy_path) do %>
          <div class="btn btn-block btn-success">
            <span class="icon-plus-sign">  Create</span>
          </div>
      <% end %>
      <div id="annual"></div>

    </center>





  </div>
  <div class="span5"></div>
</div>
