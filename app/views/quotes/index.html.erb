<%- model_class = Quote -%>
<div class="container-fluid" xmlns="http://www.w3.org/1999/html" xmlns="http://www.w3.org/1999/html">
  <div class="row-fluid">
    <div class="span2"></div>
    <div class="span8">
      <div class="page-header">
        <center><h1>Listing Quotes</h1></center>
      </div>
      <center>

        <table class="table table-striped table-hover table-condensed table-bordered">
          <thead>
          <tr>
            <th><center>Lines</center></th>
            <th><center>Author</center></th>

            <th><center><i class="icon-file-alt icon-large"></i></center></th>
          </tr>
          </thead>
          <tbody>

<% @quotes.each do |quote| %>
<tr>
    <td><%= quote.lines %></td>
    <td><%= quote.author %></td>

    <td><center>
      <%= link_to '<i class="icon-pencil"></i> Edit'.html_safe, edit_quote_path(quote), :class => 'badge badge-info' %>
      <%= link_to '<i class="icon-trash"></i> Remove'.html_safe, quote_path(quote),
                  :method => :delete,
                  :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                  :class => 'badge badge-important'%>
    </center></td>
  </tr>
<% end %>
</table>
</div>
    <div class="span2">
    </div>
  </div>
  <div class="row-fluid">
    <div class="span5">    </div>
    <div class="span2">
      <center>

        <%= link_to(new_quote_path) do %>
            <div class="badge badge-success">
              <span class="icon-plus-sign">  Create</span>
            </div>
        <% end %>

      </center>

    </div>
    <div class="span5"></div>
  </div>